{
  "name": "tlaplus-ai-tools",
  "version": "1.0.0",
  "description": "TLA+ formal specification and model checking tools with AI assistance for Claude Code and OpenCode",
  "main": "dist/index.js",
  "bin": {
    "tlaplus-ai-tools": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublish": "npm run build",
    "postinstall": "node scripts/post-install.js",
    "setup": "node scripts/setup.js",
    "verify": "bash scripts/verify.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "opencode:e2e": "node scripts/opencode-e2e.mjs"
  },
  "keywords": [
    "tla+",
    "tlaplus",
    "mcp",
    "model-checking",
    "formal-methods",
    "formal-verification",
    "claude-code",
    "opencode",
    "ai-assistant"
  ],
  "author": {
    "name": "Zhiting Zhu",
    "email": "zhitingzzt@gmail.com",
    "url": "https://github.com/photoszzt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/photoszzt/tlaplus-ai-tools.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@opencode-ai/plugin": "1.1.36",
    "adm-zip": "^0.5.16",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.3.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
