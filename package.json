{
  "name": "tlaplus-ai-tools",
  "version": "2.0.0",
  "description": "TLA+ formal specification and model checking tools with AI assistance for Claude Code and OpenCode",
  "main": "dist/index.js",
  "bin": {
    "tlaplus-ai-tools": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "setup": "node scripts/setup.js",
    "verify": "bash scripts/verify.sh",
    "install-global": "node scripts/install-global.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "files": [
    "dist/",
    ".claude-plugin/",
    "skills/",
    "commands/",
    "agents/",
    "hooks/",
    "resources/",
    "scripts/",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tla+",
    "tlaplus",
    "mcp",
    "model-checking",
    "formal-methods",
    "formal-verification",
    "claude-code",
    "opencode",
    "ai-assistant"
  ],
  "author": {
    "name": "Zhiting Zhu",
    "email": "zhitingzzt@gmail.com",
    "url": "https://github.com/photoszzt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/photoszzt/tlaplus-ai-tools.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@napi-rs/canvas": "^0.1.65",
    "@opencode-ai/plugin": "1.1.36",
    "adm-zip": "^0.5.16",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.3.3",
    "tsx": "^4.21.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "overrides": {
    "test-exclude": "7.0.1"
  }
}
